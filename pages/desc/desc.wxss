/* pages/desc/desc.wxss */
.pic_container{
  width:100%;
  height:620rpx;
  text-align: center;
}
.pic_container image{
  width:75%;
  height:100%;
}
.tandp{
  margin:20rpx 40rpx;
}
.desc_title{
  font-size:15px;
  font-weight:bold;
}
.desc_price{
  color:#f00;
  font-weight:bold;
}
.count{
  padding:25rpx 0rpx;
  padding-left:40rpx;
  position:relative;
}
.countnum{
  font-size:18px;
}
.countchoose{
  font-size:14px;
  color:#515151;
  position:absolute;
  top:34rpx;
  left:195rpx;
}
.numberbox {
  position:absolute;
  bottom:19%;
  left:43%;
  width:80px;
  height:26px;
  margin: 0 auto;
  border: 1px solid #ccc;
  border-radius: 3px;
}
.numberbox text {
float: left;
width: 19px;
line-height: 26px;
text-align: center;
}
/*数值*/
.numberbox input {
width: 40px;
height: 26px;
float: left;
margin: 0 auto;
text-align: center;
font-size: 12px;
border-left: 1px solid #ccc;
border-right: 1px solid #ccc;
}
/*普通样式*/
.numberbox .normal {
color:black;
}
/*禁用样式*/
.numberbox .disable {
color: #ccc;
}
.divider{
  height:20rpx;
  background-color:#f1f1f1;
  text-align:center;
  line-height:90rpx;
}
