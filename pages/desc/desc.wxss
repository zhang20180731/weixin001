}
.destails{
  padding-top:30rpx;
}
.details_title{
  display:flex;
  justify-content: space-around;
  font-size:16px;
 
}
.line{
  color:#fff;
  padding:0;
  margin:0
}
.linenew{
  color:#f00;
  padding:0;
  margin:0
}
.flex{
  display:flex;
  flex-direction: column;
}
.content{
  display:flex;
  width:100%;
  justify-content: center;
}
.content image{
  width:100%;
  height:385rpx;
} 
