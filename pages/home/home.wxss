page{
 background-color:#f1f1f1;
 margin-bottom:20rpx;
}
.slider{
  height:390rpx;
  width:100%;
  margin-top:30rpx;
}
.slider swiper{
  height:390rpx;
  width:100%;
}
.slider image{
  width:100%;
  height:390rpx;
}
.input{
  display:flex;
  justify-content: center;
}
.input input{
   background-image:url(http://127.0.0.1:4000/img/search.png);
   background-size:45rpx 45rpx;
   background-repeat:no-repeat;
   font-size:14px;
   width:85%;
   border:1px solid #ccc;
   border-radius:15px;
   padding-left:55rpx;
}
.index-nav{
  background: #fff;
  display:flex;
  flex-wrap:wrap;
}
.index-nav .nav-item{
  height:160rpx;
  width:25%;
  box-sizing:border-box;
  display:flex;
  justify-content: center;
  flex-direction: column;
  align-items:center;
  font-size:14px;
}
.index-nav image{
  width:80rpx;
  height:80rpx;
}
.divider{
  height:90rpx;
  background-color:#f1f1f1;
  text-align:center;
  line-height:90rpx;
}
.divider .title_img{
  width:60rpx;
  height:60rpx;
   vertical-align: middle;
}
.divider .title{
  font-size:14px;
  font-weight:bold;
}
.hot_floor1{
  display:flex;
  padding-left:8px;
  padding-right:8px;
}
.hot_floor1 .hot_floor1_left{
  width:45%;
  height:320rpx;
  background: #fff;
  text-align: center;
  margin-right:8px;
}
.hot_floor1 .hot_floor1_left .left_img{
  width:280rpx;
  height:230rpx;
}
.hot_floor1 .hot_floor1_left .left_text{
  font-size:13px;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:1;
  overflow:hidden;
}
.price{
  color:#FF4444;
  font-size:14px;
  float:left;
  margin-left:5rpx;
  font-weight:bold;
}
.hot_floor1 .hot_floor1_right{
  display:flex;
  flex-direction:column;
  width:53%;
}
.right{
  width:100%;
  height:50%;
  margin-top:5rpx;
  background: #fff;
  display: flex;
}
.right-img{
  width:36%;
  height:85%;
  margin-top:15rpx;
}
.dd{
  width:50%;
  margin-top:25rpx;
}
.right-text{
  font-size:13px;
   display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  overflow:hidden;
}
.hot_floor2{
  display:flex;
  margin-top:8rpx;
  padding-left:8px;
  padding-right:8px;
  justify-content: space-around;
}
.hot_floor2 .hot_floor2_left{
  width:48%;
  background: #fff;
  display:flex;
  margin-right:10rpx;
  padding:10rpx 5rpx;
  height:150rpx;
}
.hot_floor2 .hot_floor2_left image{
    width:35%;
    height:90%;
}
.new{
  margin-right:20rpx;
}
.itemnew{
  display:flex;
  width:100%;
  margin:10rpx 10rpx;
  background:#fff;
}
.recommend_image{
  text-align:center;
}
.itemnew image{
  width:200rpx;
  height:240rpx;
}
.itemnew .newdesc{
  display:flex;
  flex-direction:column;
  width:70%;
   font-size:14px;
  color:#505050;
  margin-top:30rpx;
}
.new .newtitle{
  font-weight:bold;
  font-size:14px;
}
.class{
  display:flex;
  justify-content: space-around;
}
.seven,.eight,.nine{
  width:215rpx;
  height:110rpx;
  text-align:center;
  line-height: 110rpx;
  color:#fff;
  font-size:14px;
  border:0px;
  border-radius:5px;
}
.seven{
  background: linear-gradient(to right,darkorange,orange);
}
.eight{
 background: linear-gradient(to right,green,lightgreen); 
}
.nine{
  background: linear-gradient(to right,skyblue,lightblue);
}
